<?xml version="1.0" encoding="UTF-8" ?>
<resources>
    <style name="Theme.Toggl.App" parent="Theme.Toggl.Base">
        <item name="android:actionBarStyle">@style/Theme.Toggl.ActionBar</item>
        <item name="actionBarStyle">@style/Theme.Toggl.ActionBar</item>

        <item name="android:listViewStyle">@style/Theme.Toggl.ListView</item>

        <item name="android:windowBackground">@color/background_light_gray</item>
    </style>
    <style name="Theme.Toggl.Login" parent="Theme.Toggl.Base">
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="Theme.Toggl.ListView" parent="@android:style/Widget.ListView">
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:listSelector">@android:color/transparent</item>
        <item name="android:dividerHeight">2dp</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingLeft">5dp</item>
    </style>
    <style name="Theme.Toggl.ActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@color/dark_gray</item>
        <item name="android:titleTextStyle">@android:color/white</item>
        <item name="background">@color/dark_gray</item>
        <item name="titleTextStyle">@android:color/white</item>
    </style>

    <style name="TimeEntryListItem" parent="@android:style/TextAppearance">
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/dark_gray_text</item>
        <item name="android:lines">1</item>
    </style>
    <style name="TimeEntryListItem.Title">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="TimeEntryListItem.Title.Project">
        <item name="android:layout_marginLeft">12dp</item>
    </style>
    <style name="TimeEntryListItem.Title.Client">
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="TimeEntryListItem.Description">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
    <style name="TimeEntryListItem.Description.Task">
        <item name="android:fontFamily">sans-serif</item>
    </style>
</resources>