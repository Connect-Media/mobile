<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="15dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical">
            <ImageButton
                android:id="@+id/ButtonPrevious"
                android:src="@drawable/IcKeyLeft"
                android:scaleType="fitStart"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                style="?android:attr/borderlessButtonStyle" />
            <TextView
                android:id="@+id/TimePeriodLabel"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_weight="2"
                android:layout_alignParentTop="true"
                android:textAlignment="center" />
            <ImageButton
                android:id="@+id/ButtonNext"
                android:src="@drawable/IcKeyRight"
                android:gravity="right"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:layout_width="wrap_content"
                android:scaleType="fitEnd"
                style="?android:attr/borderlessButtonStyle" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingTop="12dp">
            <TextView
                android:id="@+id/TotalLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:textSize="13dp"
                android:text="Total "
                android:textColor="@color/light_gray" />
            <TextView
                android:id="@+id/TotalValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:text="0h 0min" />
            <TextView
                android:id="@+id/BillableLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textSize="13dp"
                android:text="Billable "
                android:textColor="@color/light_gray" />
            <TextView
                android:id="@+id/BillableValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:text="0h 0min" />
        </LinearLayout>
        <toggl.joey.ui.views.BarChart
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/BarChart" />
        <toggl.joey.ui.views.PieChart
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:id="@+id/PieChart" />
        <ListView
            android:id="@id/android:list"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:divider="@drawable/DividerHorizontalLight"
            android:dividerHeight="1dp" />
    </LinearLayout>
</ScrollView>